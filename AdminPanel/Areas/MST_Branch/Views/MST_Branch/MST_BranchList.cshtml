@using System.Data
@model DataTable
@using AdminPanel.Areas.MST_Branch.Models
@{
    Layout = "~/Views/shared/_Layout.cshtml";
    MST_BranchFilterModel filterModel = new MST_BranchFilterModel();
}

<div class="body">
    @if (TempData["key"] != null)
    {
        <div id="tempAlert" class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["key"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="d-flex justify-content-between card-header">
                        <div class="">
                            <h5>Filter</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="row my-1 p-1">
                            <div class="col-6">
                                <input type="text" placeholder="Enter Branch Name" asp-for="@filterModel.BranchName" class="form-control mt-2" id="inputAddress">
                            </div>
                            <div class="col-6">
                                <input type="text" placeholder="Enter Branch Code" asp-for="@filterModel.BranchCode" class="form-control mt-2" id="inputAddress">
                            </div>
                            <div class="col-1 my-3 me-3">
                                <button type="submit" class="btn btn-primary" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchFilter">
                                    Search
                                </button>
                            </div>
                            <div class="col-10 my-3">
                                <form>
                                    <button type="reset" class="btn btn-danger" runat="server" OnClientClick="this.form.reset();return false;">Clear</button>
                                </form>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </section>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <br />
                <div class="card">
                    <div class="card-body">
                        <br />
                        <div class="row">
                            <div class="col-10">
                                <h4>Branch List</h4>
                            </div>
                            <div class="col-2 mb-3">
                                <a asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchAdd">
                                    <input type="button" class="btn btn-success" value="Add Branch" />
                                </a>
                            </div>
                        </div>
                        <!-- Table with hoverable rows -->
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">BranchName</th>
                                    <th scope="col">BranchCode</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td>@dr["BranchName"]</td>
                                        <td>@dr["BranchCode"]</td>
                                        <td>
                                            <div class="d-flex">
                                                <div class="me-2">
                                                    <form method="post" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchDelete">
                                                        <input type="hidden" value="@Convert.ToInt32(dr["BranchID"])" name="BranchID" />
                                                        <button type="submit" class="btn btn-danger" value="Delete" onclick="return fun1();">Delete</button>
                                                    </form>
                                                </div>
                                                <div class="ms-2">
                                                    <form asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchAdd">
                                                        <input type="hidden" value="@Convert.ToInt32(dr["BranchID"])" name="BranchID" />
                                                        <button type="submit" class="btn btn-info" value="Update">Update</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with hoverable rows -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <script>
        function fun1() {
            if (confirm("Are you sure you want to delete?")) {
                return true;
            }
            else {
                return false;
            }
        }
        window.onload = function () {
            setTimeout(function () {
                var alert = document.getElementById('tempAlert');
                if (alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 5000);  // 5000 milliseconds = 5 seconds
        };
    </script>
    }

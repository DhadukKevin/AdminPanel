@{
    Layout = "~/Views/shared/_Layout.cshtml";
}

@model AdminPanel.Areas.LOC_State.Models.LOC_StateModel


<div class="mt-3 mb-3">
    <h2>@TempData["name"]</h2>
</div>

<div class="card">
    <div class="card-body">
        <br />
        <form>
            @Html.HiddenFor(x=>x.StateID)
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Country Name</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="CountryId" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                        <option value="">Select Country</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">State Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="StateName" />
                    <span asp-validation-for="StateName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">State Code</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="StateCode" />
                    <span asp-validation-for="StateCode" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary" asp-area="LOC_State" asp-controller="LOC_State" asp-action="Save">@TempData["button"]</button>
                <a class="btn btn-secondary" asp-area="LOC_State" asp-controller="LOC_State" asp-action="LOC_StateList">Back</a>
            </div>
        </form>
    </div>
</div>
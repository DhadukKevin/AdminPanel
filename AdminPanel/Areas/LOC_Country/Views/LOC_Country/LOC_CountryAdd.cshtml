@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AdminPanel.Areas.LOC_Country.Models.LOC_CountryModel

<div class="mt-3 mb-3">
    <h2>@TempData["name"]</h2>
</div>
<div class="card">
    <div class="card-body">
        <br />
        <form>
            @Html.HiddenFor(x=>x.CountryID)
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Country Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="CountryName" />
                    <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Country Code</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="CountryCode" />
                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Save">@TempData["button"]</button>
                <a class="btn btn-secondary" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="LOC_CountryList">Back</a>
            </div>
        </form>
    </div>
</div>
